---
import { Post } from '../lib/interfaces.ts'
import { getPostLink, getPersonLink } from '../lib/blog-helpers.ts'


export interface Props {
  post: Post
  basePath: 'posts' | 'persons'
}

const { post, basePath } = Astro.props

const link = basePath === 'posts' ? getPostLink(post.Slug) : getPersonLink(post.Slug);
---

<div class="read-more-link">
  <a href={link}>â†’Read more</a>
</div>

<style>
  .read-more-link {
    color: var(--fg);
  }
  .read-more-link a {
    color: rgb(55, 53, 47);
    font-size: 1rem;
    font-weight: 500;
    line-height: 2rem;
    text-decoration: underline;
  }
  @media (max-width: 640px) {
    .read-more-link a {
      width: 50%;
    }
  }
</style>
